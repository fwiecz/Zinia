<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="editTextStyle">@style/DefaultEditTextStyle</item>
        <item name="buttonStyle">@style/DefaultButtonStyle</item>
    </style>

    <style name="ProgressBarSmall" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultEditTextStyleLight" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultEditTextStyle" parent="DefaultEditTextStyleLight">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextTertiary</item>

        <item name="android:backgroundTint">@color/colorTextSecondary</item>
    </style>

    <style name="TitleTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="SmallTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextTertiary</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="DefaultAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonStyle">@style/DefaultButtonBarStyle</item>
    </style>

    <style name="DefaultButtonBarStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DefaultFloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@android:color/white</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

    <style name="DefaultOverflowMenuImageButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorTextSecondary</item>
    </style>

    <style name="DefaultDividerStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/colorTextTertiary</item>
    </style>

    <style name="DefaultSwitchStyle">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:thumbTint">@color/switch_color_list</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="FullScreenAlertDialog" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

</resources>
