<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="1dp"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="20dp"
    tools:context=".colorpick.fragments.ColorPickerFragment">

    <FrameLayout
        android:id="@+id/colorWheelFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <de.hpled.zinia.colorpick.views.ColorWheelView
            android:id="@+id/colorWheelView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="-90" />

        <View
            android:id="@+id/colorWheelThumb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/color_pick_thumb"
            android:elevation="2dp"
            android:visibility="invisible" />
    </FrameLayout>

</RelativeLayout>