<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".colorsequence.ColorSequenceEditorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/colorSequencePreview"
                class="de.hpled.zinia.fragments.PreviewControllerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:layout="@layout/fragment_preview_controller" />

            <fragment
                android:id="@+id/colorSequencePrefs"
                class="de.hpled.zinia.colorsequence.fragments.ColorSequenceEditorPrefsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:layout="@layout/fragment_color_sequence_editor_prefs" />

        </LinearLayout>
    </ScrollView>

    <de.hpled.zinia.colorsequence.views.StaticViewPager
        android:id="@+id/colorSequencePager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </de.hpled.zinia.colorsequence.views.StaticViewPager>

</LinearLayout>